{
  "name": "simple-typescript-app",
  "version": "1.0.0",
  "description": "A simple TypeScript application for Kubernetes deployment",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t simple-typescript-app .",
    "docker:run": "docker run -p 3000:3000 simple-typescript-app"
  },
  "keywords": ["typescript", "node", "kubernetes", "docker"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
